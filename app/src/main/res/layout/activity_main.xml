<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="322dp"
        android:layout_height="591dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/englishButton"
            android:background="@color/grey"
            android:backgroundTint="@color/grey"
            android:onClick="playPhrase"
            android:tag="doyouspeakenglish"
            android:text="Do you\nspeak english"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/goodeveningButton"
            android:background="@color/grey"
            android:onClick="playPhrase"
            android:tag="goodevening"
            android:text="good evening"
            android:backgroundTint="@color/grey"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/helloButton"
            android:onClick="playPhrase"
            android:tag="hello"
            android:text="hello"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/howareyouButton"
            android:onClick="playPhrase"
            android:tag="howareyou"
            android:text="how are you"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/iliveinButton"
            android:onClick="playPhrase"
            android:tag="ilivein"
            android:text="i live in"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/mynameisButton"
            android:onClick="playPhrase"
            android:tag="mynameis"
            android:text="my name is"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/pleaseButton"
            android:onClick="playPhrase"
            android:tag="please"
            android:text="please"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/welcomeButton"
            android:onClick="playPhrase"
            android:tag="welcome"
            android:text="welcome"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>